<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uark.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BestEmailClient">
        <activity
            android:name="edu.uark.finalproject.LoginScreen"
            android:exported="true"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.BestEmailClient.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.uark.finalproject.ComposeActivity.ComposeActivity"
            android:exported="true" />
        <activity
            android:name="edu.uark.finalproject.InboxActivity.InboxActivity"
            android:exported="true">

        </activity>

        <provider
            android:name="edu.uark.finalproject.data.MessageProvider"
            android:authorities="edu.uark.finalproject.data"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>